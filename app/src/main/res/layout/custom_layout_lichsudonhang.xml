<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:gravity="center"
    android:id="@+id/khungDonHang"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/imgQuanAn"
        android:layout_width="99dp"
        android:layout_height="99dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvTenQuanAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên quán ăn"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 62.000đ"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dagiao"
            android:textColor="#28BF17"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btnXemDonHang"
        android:layout_width="110dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_button_datlaimon"
        android:drawableLeft="@drawable/baseline_refresh_24"
        android:text="@string/xemdonhang"
        android:textAllCaps="false"
        android:textColor="#FDF9F9"
        android:textSize="13sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_gravity="bottom"/>

</LinearLayout>
