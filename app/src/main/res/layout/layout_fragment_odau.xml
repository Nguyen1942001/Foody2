<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundTrangChu">

        <RadioGroup
            android:id="@+id/group_tab_radio"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            >

            <RadioButton
                android:id="@+id/rd_moinhat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/moinhat"
                android:button="@android:color/transparent"
                android:textAlignment="center"
                android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:textColor="@drawable/changetext_tab_trangchu"
                android:background="@drawable/changebackground_tab"
                android:checked="true"
                />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroundTrangChu"
                />

            <RadioButton
                android:id="@+id/rd_danhmuc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/danhmuc"
                android:button="@android:color/transparent"
                android:textAlignment="center"
                android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:textColor="@drawable/changetext_tab_trangchu"
                android:background="@drawable/changebackground_tab"
                />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroundTrangChu"
                />

            <RadioButton
                android:id="@+id/rd_khuvuc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/khuvuc"
                android:button="@android:color/transparent"
                android:textAlignment="center"
                android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:textColor="@drawable/changetext_tab_trangchu"
                android:background="@drawable/changebackground_tab"
                />

        </RadioGroup>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestScrollViewOdau"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:text="@string/gantoi"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/nearby"
                        android:padding="10dp"
                        android:gravity="center|left"
                        android:drawablePadding="10dp"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/giaohang"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/order"
                        android:padding="10dp"
                        android:gravity="center|left"
                        android:drawablePadding="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:text="@string/blog"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/blog"
                        android:padding="10dp"
                        android:gravity="center|left"
                        android:drawablePadding="10dp"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/gameandfun"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/gameandfun"
                        android:padding="10dp"
                        android:gravity="center|left"
                        android:drawablePadding="10dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:text="@string/danhgia"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/review"
                        android:padding="10dp"
                        android:gravity="center|left"
                        android:drawablePadding="10dp"
                        />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/topmember"
                        android:textAllCaps="false"
                        android:drawableLeft="@drawable/user"
                        android:padding="10dp"
                        android:gravity="center|left"
                        android:drawablePadding="10dp"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerOdau"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                </androidx.recyclerview.widget.RecyclerView>

                <ProgressBar
                    android:id="@+id/progressBarOdau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:indeterminateTint="@color/purple_700"
                    />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

