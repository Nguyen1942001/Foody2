<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    >

    <!--  Hiện thông tin wifi của quán ăn  -->
    <LinearLayout
        android:id="@+id/khungWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/txtTenWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên Wifi"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtMatKhauWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorFacebook"
                android:textStyle="bold"
                android:text="Mật Khẩu Wifi"
                android:textAlignment="textEnd"
                android:gravity="end"
                />

            <TextView
                android:id="@+id/txtNgayDangWifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày Đăng Wifi"
                android:textSize="8sp"
                android:textAlignment="textEnd"
                android:gravity="end"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>